# ============================================
# Swastik MCP — Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your values.

# Server
PORT=3939

# Firebase Admin SDK
# Path to your Firebase service account JSON file (absolute or relative to backend/)
# Download from: Firebase Console → Project Settings → Service Accounts → Generate New Private Key
FIREBASE_SERVICE_ACCOUNT_PATH=
FIREBASE_SERVICE_ACCOUNT_JSON=
FIREBASE_PROJECT_ID=

# Sync
SYNC_INTERVAL_MS=60000

# Device Agent
MCP_API_URL=http://localhost:3939/api
DEVICE_ID=
AGENT_SECRET=

# Telegram/admin control hardening
BACKEND_ADMIN_SECRET=
TELEGRAM_ALLOWED_CHAT_IDS=
TELEGRAM_OWNER_CHAT_ID=
RENDER_DEPLOY_HOOK_URL=
ALLOW_PROCESS_SELF_RESTART=false

# AI API Keys (for future use)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_AI_API_KEY=
